<meta charset="UTF-8">
<link rel="stylesheet" type="text/css" href="../styles/p_user_list.css">
<link rel="stylesheet" type="text/css" href="../styles/p_insitution_list.css">

<div class="container-fluid">
    <h2 class="title">题库管理</h2>
	<form class="form-inline" id="QueryTopicStoreForm">
	    <a href="#" class="btn btn-success btn-color" id="topicStoreAdd" data-toggle="modal" data-target="#myModal">新建题库</a>
		<div class="form-group">
			<label for="topicStoreName">题库名称</label> <input type="text"
				class="form-control" name="topicStoreName" maxLength="40" id="topicStoreName">
		</div>
		<a class="btn btn-default bt-color btn-sm" role="button" id="queryTopicStoreList">
		    <span  class="gicon">搜索</span>
	    </a>
	</form> 
	   <div id="topic_store_list"></div>
          <nav>
    <div class="pagin-btm clearFix innerWord">
        <div class="pagin" id="page"></div>
    </div>
    </nav>  
     
	<nav>
        <div class="pagination pull-right radiusIcon" style="margin:10px 0px;" id="page">
        </div>
    </nav>
    <!-- Modal -->
	<div class="modal fade" data-backdrop  id="myModal" tabindex="-1" role="dialog"
		aria-labelledby="myModalLabel">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header"><!-- 
					<button type="button" class="close" data-dismiss="modal"
						aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button> -->
					<h4 class="modal-title text-center" id="myModalLabel">新建题库</h4>
				</div>
				<div class="modal-body"> 
					<div class="container-fluid">
						<form class="form-horizontal" id="topicStoreBean">
							<div class="form-group">
								<label for="inputEmail3" class="col-sm-2 control-label">题库名称</label>
								<div class="col-sm-10">
									<input type="text" class="form-control" name="name" maxLength="50"
										required placeholder="">
										<input type="hidden"  id="oldName" >
										<span class="hide" style="color:red;"  id="topicStoreNameBox"></span>
								</div>
							</div>
							<div class="form-group">
								<label for="inputEmail3" class="col-sm-2 control-label">优势说明</label>
								<div class="col-sm-10">
									<textarea style="width:100%" rows="4" required name="goodDesc"></textarea>
								    <span class="hide" style="color:red;" id="goodDescriptionBox"></span>
								</div>
							</div>
                            <div class="form-group">
								<label for="inputEmail3" class="col-sm-2 control-label">劣势说明</label>
								<div class="col-sm-10">
									<textarea style="width:100%" rows="4" required name="badDesc"></textarea>
								    <span class="hide" style="color:red;" id="badDescriptionBox"></span>
								</div>
							</div>
							<div class="form-group">
								<label for="inputEmail3" class="col-sm-2 control-label" style="padding-left:0px;padding-right:0">培养方案名称</label>
								<div class="col-sm-9">
									<input type="text" class="form-control" name="trainPlanName"
										required="required" placeholder="展示在用户培养方案列表界面">
										<span class="hide" style="color:red;" id="trainPlanNameBox"></span>
								</div>
							</div>
						</form>
					</div>
				</div>
				<div class="modal-footer" style="text-align: center">
					<button type="button" class="btn btn-default" id="closeUserForm" onclick="console.log()"data-dismiss="modal">取消</button>
					<input type="submit" class="btn btn-info" 
						value="保存" id="saveTopicStoreBtn" onclick="console.log()">
				</div>
			</div>
		</div>
	</div>
	<script id="t:v_empty_list" type="text/html">
	    <div class="codeContent field min-height" id="project-interface">
	        <div class="cooperate-status">
	            <p>当前列表没有数据！</p>
	        </div>
	    </div>
	</script>
    <script id="t:topic_store_list" type="text/html">
        <table class="table table-striped table-bordered" style="margin-bottom: 0px">
            <tbody>
            <tr>
             <td>题库名称</td>
			<td>题目数量</td>
			<td>任务数量</td>
			<td>操作</td>
            </tr>
            {{each list as l}}
            <tr>
				<td>{{l.name}}</td>
				<td>{{l.topicNum}}</td>
				<td>{{l.taskNum}}</td>  

				<td>
				<a href="#" class="J_edit" data-id="{{l.id}}" data-good="{{l.goodDescription}}" 
				data-bad="{{l.badDescription}}" data-plan="{{l.trainPlanName}}" 
				data-name="{{l.name}}" data-toggle="modal" data-target="#myModal">编辑</a>&nbsp;&nbsp;&nbsp;
				<a href="#" class="J_removeTopicStore" data-id="{{l.id}}">删除</a>&nbsp;&nbsp;&nbsp;
				</td>
            </tr>
            {{/each}}  
            </tbody>
        </table>
    </script>
    <script type="text/javascript" src="../modules/dateFormat/dateFormat.js"></script>
      <script type="text/javascript" src="../scripts/p_topic_store_list.js"></script>
</div>
